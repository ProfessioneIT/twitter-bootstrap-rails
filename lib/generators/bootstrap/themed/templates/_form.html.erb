<%%= form_for @<%= resource_name %>, :html => { :class => 'form-horizontal well' } do |f| %>
<% field_set_tag @<%= resource_name %>.model_name.human do %>
  <%- columns.each do |column| -%>
      <%%= f.<%= column.field_type %> :<%= column.name %>, :class => '<%= column.field_type %> input-xlarge' %>
  <%- end -%>
<% end %>

  <div class="form-actions">
    <%%= f.submit nil, :class => 'btn btn-primary' %>
    <%%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                <%= controller_routing_path %>_path, :class => 'btn' %>
  </div>
<%% end %>
